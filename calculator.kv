#:set color1 (0.235,0.075,0.380,1)
#:set color2 (0.322,0.118,0.486,1)
#:set color3 (0,0,0,1)
#:set color4 (117,194,149)

<Button1@Button>:
    background_color: color1

<Button2@Button>:
    background_normal: 'images/blackButton.png'
    background_down: 'images/blueButton.png'
    # background_color: color2

<Button3@Button>:
    background_color: color3


<Calculator>:
    orientation: 'vertical'
    # Top Box: Display
    BoxLayout:
        orientation:'horizontal'
        size_hint: 1,0.08
        padding: 5,10,5,0
        # Left: Memory
        Label:
            id: memLabel
            size_hint: 0.1,1
            text: ''
            font_size: "30dp"
        # Mid: Main Display
        TextInput:
            id: mainDisplay
            size_hint: 0.8,1
            text: "0"
            font_size: 30
            font_name: 'fonts\digital-7.ttf'
            halign: 'right'
            valign: 'middle'
        # Right: Active Operation
        Label:
            size_hint: 0.1,1
            text:'='
            font_size: "30dp"

    # Mid Box: Operation and Number buttons
    BoxLayout:
        orientation:'vertical'
        size_hint: 1,0.82
        padding: ('5dp', '5dp', '5dp', '5dp')
        # Top: Memory
        GridLayout:
            padding: ('5dp', '5dp', '5dp', '5dp')
            cols: 6
            size_hint: 1,0.1
            Button1:
                text:'M+'
                on_press: root.action("M+")
            Button1:
                text:'M-'
                on_press: root.action("M-")
            Button1:
                text:'MR'
                on_press: root.action("MR")
            Button1:
                text:'MC'
                on_press: root.action("MC")
            Button1:
                text:'CE'
                on_press: root.action('clear_all')
            Button1:
                text:'<-'
                on_press: root.action('back_one')
        
        # Mid: Complex Functions and Clear
        GridLayout:
            padding: ('5dp', '5dp', '5dp', '5dp')
            cols:5
            size_hint: 1,0.4
            Button2:
                text:'x^y'
                on_press: root.action('**')
            Button2:
                text:'x^2'
                on_press: root.action('^2')
            Button2:
                text:'x!'
                on_press: root.action('!')
            Button2:
                text:'1/x'
                on_press: root.action('1/')
            Button2:
                text:'sq(x)'
                on_press: root.action('sq_root')
            Button2:
                text:'('
                on_press: root.action('(')
            Button2:
                text:')'
                on_press: root.action(')')
            Button2:
                text:'|x|'
                on_press: root.action('abs')
            Button2:
                text:'log y'
                on_press: root.action('logy')
            Button2:
                text:'e'
                on_press: root.action('e')
            Button2:
                text:'pi'
                on_press: root.action('pi')
            Button2:
                text:'log'
                on_press: root.action('log10')
            Button2:
                text:'+/-'
                on_press: root.action('+/-')
            Button2:
                text:'ln'
                on_press: root.action('ln')
            Button2:
                text:'cos'
                on_press: root.action('cos')
            Button2:
                text:'sin'
                on_press: root.action('sin')
            Button2:
                text:'tan'
                on_press: root.action('tan')
            Button2:
                text:'y(x)'
                on_press: root.action('rooty')
            Button2:
                text:'x mod y'
                on_press: root.action('mod')
            Button2:
                text:'e^x'
                on_press: root.action('e^x')
            
        # Bottom: Numbers and Basic Functions
        GridLayout:
            padding: ('5dp', '5dp', '5dp', '5dp')
            cols:4
            size_hint: 1,0.5
            Button3:
                text:'7'
                on_press: root.digit(7)
            Button3:
                text:'8'
                on_press: root.digit(8)
            Button3:
                text:'9'
                on_press: root.digit(9)
            Button3:
                text:'+'
                on_press: root.action("+")
            Button3:
                id: "4"
                text:'4'
                on_press: root.digit(4)
            Button3:
                id: "5"
                text:'5'
                on_press: root.digit(5)
            Button3:
                id: "6"
                text:'6'
                on_press: root.digit(6)
            Button3:
                id: "minus"
                text:'-'
                on_press: root.action("-")
            Button3:
                id: "1"
                text:'1'
                on_press: root.digit(1)
            Button3:
                id: "2"
                text:'2'
                on_press: root.digit(2)
            Button3:
                id: "3"
                text:'3'
                on_press: root.digit(3)
            Button3:
                id: "multiply"
                text:'x'
                on_press: root.action("*")
            Button3:
                id: "point"
                text:'.'
                on_press: root.digit(".")
            Button3:
                id: "0"
                text:'0'
                on_press: root.digit(0)
            Button3:
                id: "equals"
                text:'='
                on_press: root.action("=")
            Button3:
                id: "divide"
                text:'/'
                on_press: root.action("/")

    #Bottom Box
        BoxLayout:
            size_hint: 1,0.1
            orientation:'horizontal'
            padding: ('5dp', '5dp', '5dp', '5dp')
            # Left box:
            Button:
                size_hint: 0.25,1
                background_color: (0, 0, 0, 1)
                text: ''
                font_size: "15dp"
            # Mid-Left Box:
            Button:
                size_hint: 0.25,1
                background_color: (0, 0, 0, 1)
                text: ''
                font_size: "15dp"
            # Mid-Right Box:
            Button:
                size_hint: 0.25,1
                background_color: (0, 0, 0, 1)
                text: ''
                font_size: "15dp"
            # Right Box:
            Button:
                id: angleUnitSwitch
                size_hint: 0.25,1
                background_color: (0, 0, 0, 1)
                text: 'RAD'
                font_size: "15dp"
                on_press: root.switch('angles')
